<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/cardOuter"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kosong" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dip"
                android:layout_marginTop="5sp"
                android:text="Judul"
                android:textColor="#333333"
                android:textSize="11sp"
                android:textStyle="bold" />

<!--            <ImageView-->
<!--                android:id="@+id/gambar_status"-->
<!--                android:layout_width="55dp"-->
<!--                android:layout_height="38dp"-->
<!--                android:layout_marginLeft="30dp"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:src="@drawable/kosong"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_alignParentBottom="true" />-->

            <TextView
                android:id="@+id/tracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:textSize="11sp"
                android:layout_alignStart="@+id/judul"
                android:layout_below="@+id/judul"
                android:layout_marginTop="5dp"
                android:text="#0000000000" />

            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tracking"
                android:textSize="10sp"
                android:layout_marginRight="15dp"
                android:text="Tanggal" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tracking"
                android:layout_alignEnd="@+id/tgl"
                android:textSize="10sp"
                android:text="TextView" />

        </RelativeLayout>

<!--        <TextView-->
<!--            android:id="@+id/kode"-->
<!--            android:layout_width="220dp"-->
<!--            android:layout_height="10dp"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:textColor="#D7DEF0"-->
<!--            android:textSize="0.5sp" />-->

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardOuter2"
        android:background="#ffffff"
        android:layout_below="@+id/cardOuter">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nama_kategori"
                android:layout_width="230dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:text="Alamat Laporan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#666666"
                android:textSize="11sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>